{
  "name": "bi-browser-extension",
  "displayName": "SeekBot - Make Life Productive",
  "private": true,
  "version": "0.1.0",
  "description": "Automate capture bookmark website screenshots, save bookmark website content, and easy-to-find bookmarks with powerful search engine and chatbot.",
  "author": "help.bitskyai@gmail.com",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "plasmo dev --verbose --env=.env.development",
    "build": "plasmo build",
    "package": "plasmo package",
    "codegen": "graphql-codegen"
  },
  "dependencies": {
    "plasmo": "0.70.1",
    "@plasmohq/messaging": "0.3.0",
    "@plasmohq/storage": "^1.6.0",
    "webextension-polyfill": "^0.10.0",
    "graphql": "^16.6.0",
    "@apollo/client": "^3.7.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.0",
    "antd": "^5.4.6",
    "lodash": "^4.17.21",
    "normalize-url": "^6.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.210",
    "@types/node": "^18.11.19",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/webextension-polyfill": "^0.10.0",
    "@types/lodash": "^4.14.175",
    "@types/debug": "^4.1.7",
    "prettier": "2.8.3",
    "typescript": "^4.9.5",
    "@plasmohq/prettier-plugin-sort-imports": "3.6.1",
    "@graphql-codegen/cli": "^3.0.0",
    "@graphql-codegen/typed-document-node": "^3.0.0",
    "@graphql-codegen/typescript": "^3.0.0",
    "@graphql-codegen/typescript-operations": "^3.0.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.1.0"
  },
  "envars": {
    "cwd": "../../env"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "alarms",
      "bookmarks",
      "history",
      "scripting",
      "tabs",
      "contextMenus",
      "unlimitedStorage",
      "webNavigation",
      "notifications",
      "storage",
      "unlimitedStorage",
      "scripting",
      "activeTab"
    ]
  }
}
