{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "*": ["node_modules/*"],
      "@bitsky/shared": ["../shared"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/web-app"],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
