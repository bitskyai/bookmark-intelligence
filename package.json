{
  "name": "bookmark-intelligence",
  "displayName": "Bookmark intelligence",
  "version": "0.1.0",
  "description": "Automate capture bookmark website screenshots, save bookmark website content, and easy-to-find bookmarks with powerful search engine",
  "private": true,
  "repository": "https://github.com/bitskyai/smart-bookmarks.git",
  "author": "help.bitskyai@gmail.com",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">= 1.0.0"
  },
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "plasmo": "0.58.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "antd": "5.0.0",
    "rxdb": "13.11.0",
    "rxjs": "7.5.7",
    "webextension-polyfill-ts": "0.26.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.202",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "prettier": "2.7.1",
    "typescript": "4.9.3",
    "@plasmohq/prettier-plugin-sort-imports": "3.5.4",
    "eslint": "8.28.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "alarms",
      "bookmarks",
      "history",
      "scripting",
      "tabs",
      "contextMenus",
      "unlimitedStorage",
      "webNavigation",
      "notifications",
      "storage"
    ]
  }
}
