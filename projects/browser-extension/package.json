{
  "name": "bi-browser-extension",
  "displayName": "Bookmark Intelligence",
  "private": true,
  "version": "0.1.0",
  "description": "Automate capture bookmark website screenshots, save bookmark website content, and easy-to-find bookmarks with powerful search engine",
  "author": "help.bitskyai@gmail.com",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "plasmo dev --verbose",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.70.1",
    "@plasmohq/messaging": "0.3.0",
    "@plasmohq/storage": "^1.6.0",
    "webextension-polyfill": "^0.10.0",
    "graphql": "^16.6.0",
    "@apollo/client": "^3.7.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.0",
    "antd": "^5.4.6",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/chrome": "0.0.210",
    "@types/node": "^18.11.19",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/webextension-polyfill": "^0.10.0",
    "@types/lodash": "^4.14.175",
    "prettier": "2.8.3",
    "typescript": "^4.9.5",
    "@plasmohq/prettier-plugin-sort-imports": "3.6.1"
  },
  "envars": {
    "cwd": "../../env"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "alarms",
      "bookmarks",
      "history",
      "scripting",
      "tabs",
      "contextMenus",
      "unlimitedStorage",
      "webNavigation",
      "notifications",
      "storage"
    ]
  }
}
